<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="?attr/colorAccent"
    >
  <item>
    <layer-list>
      <item>
        <shape android:shape="rectangle">
          <padding
              android:bottom="1dp"
              android:left="1dp"
              android:right="1dp"
              android:top="1dp"
              />
          <stroke
              android:width="1dp"
              android:color="?attr/colorPrimary"
              />
          <corners android:radius="4dp" />
        </shape>
      </item>
      <item>
        <shape android:shape="rectangle">
          <padding
              android:bottom="10dp"
              android:left="10dp"
              android:right="10dp"
              android:top="10dp"
              />
          <solid android:color="@android:color/white" />
          <corners android:radius="4dp" />
        </shape>
      </item>
      <item>
        <shape android:shape="rectangle">
          <padding
              android:bottom="10dp"
              android:left="10dp"
              android:right="10dp"
              android:top="10dp"
              />
          <solid android:color="?attr/colorPrimary" />
          <corners android:radius="4dp" />
        </shape>
      </item>
      <item>
        <bitmap
            android:antialias="true"
            android:src="@drawable/adevinta_a_logo"
            />
      </item>
    </layer-list>
  </item>

</ripple>