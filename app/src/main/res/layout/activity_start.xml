<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/M"
              android:gravity="center_horizontal"
              android:orientation="vertical"
    >

  <Space
      android:layout_width="match_parent"
      android:layout_height="@dimen/XXL"
      />

  <TextView
      style="@style/H4"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/session_join"
      />

  <Space
      android:layout_width="match_parent"
      android:layout_height="@dimen/XXL"
      />

  <com.google.android.material.textfield.TextInputLayout
      style="@style/TextInputStyle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/session_name"
      >

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/start_session_name"
        style="@style/TextEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        android:lines="1"
        />
  </com.google.android.material.textfield.TextInputLayout>

  <Space
      android:layout_width="match_parent"
      android:layout_height="@dimen/L"
      />

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/start_session_code"
      style="@style/TextInputStyle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/session_code"
      >

    <com.google.android.material.textfield.TextInputEditText
        style="@style/TextEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionGo"
        android:inputType="number"
        android:lines="1"
        />
  </com.google.android.material.textfield.TextInputLayout>

  <Space
      android:layout_width="match_parent"
      android:layout_height="@dimen/L"
      />

  <Button
      android:id="@+id/start_session_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/session_enter"
      />

</LinearLayout>