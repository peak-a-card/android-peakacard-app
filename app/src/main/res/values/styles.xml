<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_10</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorError">@color/error</item>
        <item name="colorSurface">@color/primary</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <style name="TranslucentTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_10</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorError">@color/error</item>
        <item name="colorSurface">@color/primary</item>
        <item name="android:colorBackground">@color/primary_10</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@color/primary_10</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="H1">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/H1</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="H3">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/H3</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="H4">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/H4</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="CardStyle">
        <item name="android:padding">@dimen/M</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_color_state</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorPrimary">?attr/colorPrimary</item>
    </style>

    <style name="TextEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

</resources>